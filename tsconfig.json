{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "build", // <== This sends compiled files to ./build
        "rootDir": "src" // <== This tells TypeScript where the input files are
    },
    "include": [
        "src/**/*"
    ]
}